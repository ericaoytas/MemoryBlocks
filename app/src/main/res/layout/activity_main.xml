<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:gravity="bottom|center_horizontal"
        android:layout_weight="50"
        android:fontFamily="@font/montserrat_bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/play_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/play_string"
            android:onClick="goToDifficultyScreen"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/scores_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/scores_string"
            android:onClick="goToScoresScreen"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/help_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/help_string"
            android:onClick="goToHowToPlayScreen"
            android:background="@drawable/button"/>

    </LinearLayout>

</LinearLayout>