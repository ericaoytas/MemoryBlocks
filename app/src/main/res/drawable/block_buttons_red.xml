<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true"
        android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#c5dee8"
                android:endColor="#d5eaf2"
                android:angle="270" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item
        android:state_focused="false"
        android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#c5dee8"
                android:endColor="#d5eaf2"
                android:angle="270" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item
        android:state_focused="false"
        android:state_pressed="false" >
        <shape>
            <gradient
                android:startColor="#d48c8c"
                android:endColor="#eba7a7"
                android:angle="270" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>